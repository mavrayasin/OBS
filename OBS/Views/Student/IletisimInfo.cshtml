@model List<OBS.Models.Kimlik>
@{
    ViewBag.Title = "IletisimInfo";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}


<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">İletişim Bilgilerim</h3>
    </div>

    <div class="box-body">
        <table class="table table-bordered">
            <tr>
                <th style="width: 10px">ID</th>
                <th>Adres</th>
                <th>İl</th>
                <th>İlçe</th>
                <th>Email</th>
                <th>Tel No</th>
                <th></th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IletisimID</td>
                    <td>@item.Iletisim.Adres</td>
                    <td>@item.Iletisim.Il</td>
                    <td>@item.Iletisim.Ilce</td>
                    <td>@item.Iletisim.Email</td>
                    <td>@item.Iletisim.GSM</td>
                    <td><button class="btn btn-block btn-warning btn-xs" onclick="IletisimGuncelle(@item.IletisimID)">Güncelle</button></td>
                </tr>
            }



        </table>
    </div>
    <script>

        function IletisimGuncelle(IletisimID) {
            window.location.href = "/Student/UpdateIletisim?IletisimID=" + IletisimID;
        }
    </script>
